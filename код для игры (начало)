import pygame
import random

# Настройки игры
WIDTH = 800
HEIGHT = 600
FPS = 30

# Цвета
BLACK = (0, 0, 0)
WHITE = (255, 255, 255)
RED = (255, 0, 0)
GREEN = (0, 255, 0)
BLUE = (0, 0, 255)

# Инициализация PyGame
pygame.init()
pygame.mixer.init()
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Игра с препятствиями")
clock = pygame.time.Clock()

# Игрок
player_x = 100
player_y = HEIGHT - 100
player_speed = 5
player_size = 50

# Основной цикл игры
running = True
while running:
    # Обработка событий
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
# Выбор мини-игры
    if random.randint(1, 10) == 1:
        game_type = random.randint(1, 3)
        if game_type == 1:
            if guess_number():
                print("Ты выиграл мини-игру!")
            else:
                print("Ты проиграл мини-игру!")
        elif game_type == 2:
            if rock_paper_scissors():
                print("Ты выиграл мини-игру!")
            else:
                print("Ты проиграл мини-игру!")
        else:
            if riddle():
                print("Ты выиграл мини-игру!")
            else:
                print("Ты проиграл мини-игру!")
# Движение игрока
    keys = pygame.key.get_pressed()
    if keys[pygame.K_LEFT]:
        player_x -= player_speed
    if keys[pygame.K_RIGHT]:
        player_x += player_speed
    if keys[pygame.K_UP]:
        player_y -= player_speed
    if keys[pygame.K_DOWN]:
        player_y += player_speed

    # Проверка столкновений с препятствиями
    for obstacle in obstacles:
        if player_x < obstacle.x + obstacle.width and player_x + player_size > obstacle.x and \
           player_y < obstacle.y + obstacle.height and player_y + player_size > obstacle.y:
            # Проигрыш
            print("Ты столкнулся с препятствием!")
            running = False
