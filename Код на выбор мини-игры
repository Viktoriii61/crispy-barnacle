# Выбор мини-игры
    if random.randint(1, 10) == 1:
        game_type = random.randint(1, 3)
        if game_type == 1:
            if guess_number():
                print("Ты выиграл мини-игру!")
            else:
                print("Ты проиграл мини-игру!")
        elif game_type == 2:
            if rock_paper_scissors():
                print("Ты выиграл мини-игру!")
            else:
                print("Ты проиграл мини-игру!")
        else:
            if riddle():
                print("Ты выиграл мини-игру!")
            else:
                print("Ты проиграл мини-игру!")

